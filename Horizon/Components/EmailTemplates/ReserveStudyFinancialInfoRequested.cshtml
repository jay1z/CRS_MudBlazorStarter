@using Horizon.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var financialInfoUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/FinancialInfo";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#3b82f6";
    var secondaryColor = tenant?.SecondaryColor ?? "#1d4ed8";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Financial Information Requested - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }

                    <!-- Community Name and Action Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px 24px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb; @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0; border-top: 1px solid #e5e7eb;" : "")">
                            <h2 style="margin: 0 0 16px 0; color: @primaryColor; font-size: 22px; font-weight: 700; text-align: center;">@communityName</h2>
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%);">
                                        <a href="@financialInfoUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">Submit Financial Information ‚Üí</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Welcome Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Hello,
                            </p>
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                To continue with your reserve study, we need some financial information about your community's reserve fund. This information helps us create an accurate and useful reserve study for your association.
                            </p>
                            <p style="margin: 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Please click the button above to complete the Property Financial Information form.
                            </p>
                        </td>
                    </tr>

                    <!-- What We Need Section -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%); border-radius: 12px; padding: 24px; border: 1px solid #bfdbfe;">
                                <h2 style="margin: 0 0 16px 0; color: #1e40af; font-size: 18px; font-weight: 600;">Information We'll Need</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Reserve fund balances (Jan 1 and expected Dec 31)</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Budgeted reserve contributions (last, current, next year)</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Operating budget information</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Current loans or special assessments (if any)</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Planned projects and their expected costs</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Building component information (roof, siding replacement dates)</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                                <tr>
                                                    <td style="width: 24px; vertical-align: top;">
                                                        <span style="color: #3b82f6;">‚úì</span>
                                                    </td>
                                                    <td style="padding-left: 8px;">
                                                        <span style="color: #1e40af; font-size: 14px;">Insurance deductible and interest on reserve funds</span>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                                <p style="margin: 16px 0 0 0; color: #6b7280; font-size: 13px; font-style: italic;">
                                    Note: Please provide information if budgeted/available. Not all fields are required.
                                </p>
                            </div>
                        </td>
                    </tr>

                    <!-- Primary Action Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);">
                                        <a href="@financialInfoUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">Complete Financial Information Form ‚Üí</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Why This Matters -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #3b82f6; padding-bottom: 8px;">Why This Matters</h2>
                            <p style="margin: 0 0 12px 0; color: #6b7280; font-size: 14px; line-height: 1.6;">
                                Your financial data helps us:
                            </p>
                            <ul style="margin: 0; padding-left: 20px; color: #6b7280; font-size: 14px; line-height: 1.8;">
                                <li>Assess your community's current funding level</li>
                                <li>Create accurate projections for future reserve needs</li>
                                <li>Develop a sustainable funding plan</li>
                                <li>Ensure compliance with state reserve requirements</li>
                            </ul>
                        </td>
                    </tr>

                    <!-- Study Information -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 8px;">Study Information</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Community</span>
                                    </td>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb; text-align: right;">
                                        <span style="color: #374151; font-size: 14px; font-weight: 500;">@communityName</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Request ID</span>
                                    </td>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb; text-align: right;">
                                        <code style="background: #f3f4f6; padding: 4px 8px; border-radius: 4px; font-size: 13px; color: #374151;">@(Model.ReserveStudy?.Id.ToString().Substring(0, 8))...</code>
                                    </td>
                                </tr>
                                @if (Model.ReserveStudy?.Specialist != null) {
                                    <tr>
                                        <td style="padding: 12px 0;">
                                            <span style="color: #6b7280; font-size: 14px;">Your Specialist</span>
                                        </td>
                                        <td style="padding: 12px 0; text-align: right;">
                                            <span style="color: #374151; font-size: 14px; font-weight: 500;">@Model.ReserveStudy.Specialist.FullName</span>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                            <p style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600;">
                                                @companyName
                                            </p>
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                                @if (!string.IsNullOrEmpty(companyPhone)) {
                                                    <span>üìû @companyPhone</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                                    <span> | </span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyEmail)) {
                                                    <span>‚úâÔ∏è <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                                }
                                            </p>
                                        }
                                        <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                            Need help? Reply to this email or contact your specialist directly.
                                        </p>
                                        <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                            ¬© @DateTime.Now.Year @companyName. All rights reserved.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>
</html>
