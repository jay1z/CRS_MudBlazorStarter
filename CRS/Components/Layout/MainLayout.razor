@inherits LayoutComponentBase
@implements IDisposable

@using CRS.Data
@using Microsoft.EntityFrameworkCore
@using CRS.Themes
@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Identity
@using CRS.Services
@using CRS.Services.Interfaces
@using CRS.Services.Tenant
@inject IHostEnvironment HostEnvironment
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject UserManager<ApplicationUser> UserManager
@inject NavigationManager NavigationManager
@inject ThemeService ThemeService
@inject ITenantContext TenantContext
@inject IJSRuntime JS
@inject IUserSettingsService UserSettingsService
@inject AuthenticationStateProvider AuthStateProvider
@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject UserStateService UserState
@inject IMessageService MessageService

<!-- MudBlazor providers: present once per layout (supports prerendering) -->
<MudThemeProvider Theme="@ThemeService.CurrentTheme" />
<MudDialogProvider />
<MudSnackbarProvider />
<MudPopoverProvider />

<MudLayout>
    <MudAppBar Elevation="25">
        <MudStaticNavDrawerToggle DrawerId="nav-drawer" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" />
        <MudText Typo="Typo.h5" Class="ml-3">ALX Reserve Cloud</MudText>
        <MudSpacer />
        @if (_authResolved && TenantContext?.TenantId != null
            && TenantContext.IsResolvedByLogin == false
            && _isPlatformAdmin) {
            <MudChip T="string" Color="Color.Warning" Variant="Variant.Filled" Class="mx-2" StartIcon="@Icons.Material.Filled.PersonSearch">
                Impersonating: @(TenantContext.TenantName ?? ($"Tenant {TenantContext.TenantId}"))
            </MudChip>
            <MudButton Variant="Variant.Outlined" Color="Color.Error" Size="Size.Small" Class="mx-2" OnClick="@(()=>NavigationManager.NavigateTo("/Admin/StopImpersonation"))" StartIcon="@Icons.Material.Filled.HighlightOff">Stop</MudButton>
        }
        <AuthorizeView>
            <Authorized>
                <MudBadge Color="Color.Error" Content="@((unreadCount > 0) ? unreadCount.ToString() : null)" MaxValue="99" Overlap="true">
                    <MudIconButton Color="Color.Inherit" Icon="@Icons.Material.Filled.Email" OnClick='() => NavigationManager.NavigateTo("/messages/inbox")' />
                </MudBadge>
            </Authorized>
        </AuthorizeView>
        <AuthorizeView Context="auth">
            <MudText Typo="Typo.body1">@auth.User.Identity?.Name</MudText>
            @foreach (var role in auth.User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value)) {
                <MudChip T="string" Color="Color.Primary" Class="ml-2">@role</MudChip>
            }
        </AuthorizeView>
        <MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" AnchorOrigin="Origin.BottomRight" TransformOrigin="Origin.TopRight">
            <MudMenuItem Href="/Account/Manage" Icon="@Icons.Material.Filled.ManageAccounts" IconColor="Color.Primary">Profile</MudMenuItem>
            <MudMenuItem Href="/Settings" Icon="@Icons.Material.Filled.Settings" IconColor="Color.Primary">Settings</MudMenuItem>
            <MudMenuItem Href="/Account/Logout" Icon="@Icons.Material.Filled.Logout" IconColor="Color.Error">Logout</MudMenuItem>
        </MudMenu>
    </MudAppBar>

    <MudDrawer id="nav-drawer" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="25">
        @if (!_authResolved)
        {
            <MudStack Class="pa-4" Spacing="2">
                <MudSkeleton Width="60%" Height="28px" />
                <MudSkeleton Width="80%" />
                <MudSkeleton Width="40%" />
            </MudStack>
        }
        else
        {
            <NavMenu />
        }
    </MudDrawer>

    <MudMainContent id="main-content" Class="mt-16 pa-4">
        <ErrorBoundary>
            @Body
        </ErrorBoundary>
    </MudMainContent>

    <MudScrollToTop TopOffset="100" Selector="#main-content">
        <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.ArrowUpward">Go to top</MudButton>
    </MudScrollToTop>
</MudLayout>

<EnvironmentBanner />

<div id="blazor-error-ui" data-nosnippet>
    @if (HostEnvironment.IsProduction()) {
        <span>An error has occurred.</span>
    } else {
        <span>An unhandled exception occurred.</span>
    }
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private string? currentUrl;
    private bool _drawerOpen = true;
    private int unreadCount = 0;
    private bool _authResolved = false;
    private int _claimTenantId = 0;
    private bool _isPlatformAdmin = false;
    private bool _hasTenant = false; // sticky tenant presence

    protected override async Task OnInitializedAsync() {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;

        ThemeService.OnThemeChanged += StateHasChanged;
        ThemeService.SetTheme(new Default().Theme!);

        // Hydrate TenantContext and cache claim-based flags for stable nav
        try {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user?.Identity?.IsAuthenticated == true) {
                var claimTenant = user.FindFirst(CRS.Services.Tenant.TenantClaimTypes.TenantId)?.Value;
                _ = int.TryParse(claimTenant, out _claimTenantId);
                _isPlatformAdmin = user.IsInRole("PlatformAdmin");

                if (_claimTenantId > 0) {
                    _hasTenant = true; // sticky once true
                    TenantContext!.TenantId = _claimTenantId;
                    TenantContext.IsResolvedByLogin = true;
                    try {
                        await using var db = await DbFactory.CreateDbContextAsync();
                        var t = await db.Tenants.FindAsync(_claimTenantId);
                        if (t != null) {
                            TenantContext.TenantName = t.Name;
                            TenantContext.Subdomain = t.Subdomain;
                            TenantContext.IsActive = t.IsActive;
                            TenantContext.BrandingJson = t.BrandingJson;
                            try { ThemeService.ApplyTenantBrandingIfAvailableAndChanged(); } catch { }
                        }
                    } catch { }
                }
                else if (TenantContext?.TenantId != null)
                {
                    _hasTenant = true; // sticky from context
                }
            }
        } catch { }

        // Init user state and unread count
        try {
            await UserState.InitializeAsync();
            UserState.OnChange += RefreshUserFlagsOnChange;
            await RefreshUnreadCountAsync();
        } catch { }

        _authResolved = true;
        StateHasChanged();
    }

    private async void RefreshUserFlagsOnChange() {
        try {
            var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;
            if (user?.Identity?.IsAuthenticated == true) {
                var claimTenant = user.FindFirst(CRS.Services.Tenant.TenantClaimTypes.TenantId)?.Value;
                _ = int.TryParse(claimTenant, out _claimTenantId);
                _isPlatformAdmin = user.IsInRole("PlatformAdmin");
                if (_claimTenantId > 0 || TenantContext?.TenantId != null)
                {
                    _hasTenant = true; // keep sticky once acquired
                }
            } else {
                // Do NOT clear sticky flags here to avoid flicker during transient auth state changes
                _isPlatformAdmin = false;
                // _hasTenant remains as-is; it will reset on explicit logout/navigation
            }
        } catch {
            // keep existing flags on transient error
        }
        await RefreshUnreadCountAsync();
        StateHasChanged();
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e) {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        await RefreshUnreadCountAsync();
        StateHasChanged();
    }

    private async Task RefreshUnreadCountAsync() {
        try {
            if (UserState.CurrentUser != null) {
                unreadCount = await MessageService.GetUnreadCountAsync(UserState.CurrentUser.Id);
            } else {
                unreadCount = 0;
            }
        } catch { unreadCount = 0; }
    }

    public void Dispose() {
        NavigationManager.LocationChanged -= OnLocationChanged;
        ThemeService.OnThemeChanged -= StateHasChanged;
        UserState.OnChange -= RefreshUserFlagsOnChange;
    }
}


