                    <MudMenuItem OnClick="@(() => NavigationManager.NavigateTo("/Account/Logout"))">Logout</MudMenuItem>
                </Authorized>
                <NotAuthorized>
                    <MudMenuItem OnClick="@(() => NavigationManager.NavigateTo("/Account/Login"))">Login</MudMenuItem>
