@using CRS.Models
@using CRS.Services.Interfaces

@inject IProposalAcceptanceService AcceptanceService

<MudPaper Elevation="2" Class="pa-4" Style="border-radius: 12px;">
    @if (isLoading)
    {
        <MudStack AlignItems="AlignItems.Center" Class="py-4">
            <MudProgressCircular Size="Size.Small" Indeterminate="true" />
            <MudText Typo="Typo.caption" Color="Color.Secondary">Loading acceptance details...</MudText>
        </MudStack>
    }
    else if (acceptance == null)
    {
        <MudStack Spacing="2">
            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                <MudIcon Icon="@Icons.Material.Filled.PendingActions" Color="Color.Warning" />
                <MudText Typo="Typo.h6" Class="fw-bold">Proposal Not Yet Accepted</MudText>
            </MudStack>
            <MudText Typo="Typo.body2" Color="Color.Secondary">
                The client has not yet accepted this proposal. Once they accept, the acceptance details will appear here.
            </MudText>
        </MudStack>
    }
    else
    {
        <MudStack Spacing="3">
            <!-- Header -->
            <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
                    <div style="width: 40px; height: 40px; background: #E8F5E9; border-radius: 50%; display: flex; align-items: center; justify-content: center;">
                        <MudIcon Icon="@Icons.Material.Filled.Verified" Style="color: #28a745;" />
                    </div>
                    <MudStack Spacing="0">
                        <MudText Typo="Typo.h6" Class="fw-bold" Style="color: #28a745;">
                            Proposal Accepted
                        </MudText>
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            Click-wrap agreement recorded
                        </MudText>
                    </MudStack>
                </MudStack>
                
                @if (!acceptance.IsValid)
                {
                    <MudChip T="string" Color="Color.Error" Size="Size.Small">
                        <MudIcon Icon="@Icons.Material.Filled.Cancel" Size="Size.Small" Class="mr-1" />
                        Revoked
                    </MudChip>
                }
            </MudStack>

            <MudDivider />

            <!-- Acceptance Details -->
            <MudGrid Spacing="2">
                <MudItem xs="12" sm="6">
                    <MudStack Spacing="1">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            <MudIcon Icon="@Icons.Material.Filled.Draw" Size="Size.Small" Class="mr-1" />
                            Signed By
                        </MudText>
                        <MudText Typo="Typo.body1" Class="fw-bold">
                            @acceptance.TypedSignature
                        </MudText>
                        @if (!string.IsNullOrEmpty(acceptance.AcceptorTitle))
                        {
                            <MudText Typo="Typo.body2" Color="Color.Secondary">
                                @acceptance.AcceptorTitle
                            </MudText>
                        }
                    </MudStack>
                </MudItem>

                <MudItem xs="12" sm="6">
                    <MudStack Spacing="1">
                        <MudText Typo="Typo.caption" Color="Color.Secondary">
                            <MudIcon Icon="@Icons.Material.Filled.CalendarToday" Size="Size.Small" Class="mr-1" />
                            Accepted On
                        </MudText>
                        <MudText Typo="Typo.body1" Class="fw-bold">
                            @acceptance.AcceptedAt.ToLocalTime().ToString("MMMM dd, yyyy")
                        </MudText>
                        <MudText Typo="Typo.body2" Color="Color.Secondary">
                            at @acceptance.AcceptedAt.ToLocalTime().ToString("h:mm tt")
                        </MudText>
                    </MudStack>
                </MudItem>

                @if (!string.IsNullOrEmpty(acceptance.AcceptorOrganization))
                {
                    <MudItem xs="12" sm="6">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                <MudIcon Icon="@Icons.Material.Filled.Business" Size="Size.Small" Class="mr-1" />
                                Organization
                            </MudText>
                            <MudText Typo="Typo.body1">
                                @acceptance.AcceptorOrganization
                            </MudText>
                        </MudStack>
                    </MudItem>
                }

                @if (!string.IsNullOrEmpty(acceptance.AcceptorEmail))
                {
                    <MudItem xs="12" sm="6">
                        <MudStack Spacing="1">
                            <MudText Typo="Typo.caption" Color="Color.Secondary">
                                <MudIcon Icon="@Icons.Material.Filled.Email" Size="Size.Small" Class="mr-1" />
                                Email
                            </MudText>
                            <MudText Typo="Typo.body1">
                                @acceptance.AcceptorEmail
                            </MudText>
                        </MudStack>
                    </MudItem>
                }
            </MudGrid>

            <!-- Technical Details (Expandable) -->
            <MudExpansionPanels Elevation="0">
                <MudExpansionPanel Text="Verification Details" Dense="true" Style="background: #F9F9F9; border-radius: 8px;">
                    <MudGrid Spacing="2">
                        <MudItem xs="12" sm="6">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Terms Version</MudText>
                                <MudText Typo="Typo.body2">@acceptance.TermsVersion</MudText>
                            </MudStack>
                        </MudItem>
                        
                        <MudItem xs="12" sm="6">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Acceptance ID</MudText>
                                <MudText Typo="Typo.body2" Style="font-family: monospace; font-size: 0.75rem;">
                                    @acceptance.Id.ToString()[..8]...
                                </MudText>
                            </MudStack>
                        </MudItem>

                        @if (!string.IsNullOrEmpty(acceptance.IpAddress))
                        {
                            <MudItem xs="12" sm="6">
                                <MudStack Spacing="0">
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">IP Address</MudText>
                                    <MudText Typo="Typo.body2" Style="font-family: monospace;">@acceptance.IpAddress</MudText>
                                </MudStack>
                            </MudItem>
                        }

                        @if (!string.IsNullOrEmpty(acceptance.TermsContentHash))
                        {
                            <MudItem xs="12">
                                <MudStack Spacing="0">
                                    <MudText Typo="Typo.caption" Color="Color.Secondary">Terms Hash (SHA-256)</MudText>
                                    <MudText Typo="Typo.body2" Style="font-family: monospace; font-size: 0.65rem; word-break: break-all;">
                                        @acceptance.TermsContentHash
                                    </MudText>
                                </MudStack>
                            </MudItem>
                        }

                        <MudItem xs="12">
                            <MudStack Spacing="0">
                                <MudText Typo="Typo.caption" Color="Color.Secondary">Checkbox Confirmed</MudText>
                                <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                    @if (acceptance.CheckboxConfirmed)
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" Size="Size.Small" />
                                        <MudText Typo="Typo.body2">Yes - User explicitly checked the agreement box</MudText>
                                    }
                                    else
                                    {
                                        <MudIcon Icon="@Icons.Material.Filled.Cancel" Color="Color.Error" Size="Size.Small" />
                                        <MudText Typo="Typo.body2">No</MudText>
                                    }
                                </MudStack>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </MudExpansionPanel>
            </MudExpansionPanels>

            <!-- Revocation Notice -->
            @if (!acceptance.IsValid && !string.IsNullOrEmpty(acceptance.RevocationReason))
            {
                <MudAlert Severity="Severity.Error" Dense="true">
                    <MudText Typo="Typo.body2">
                        <strong>Revoked on @acceptance.RevokedAt?.ToLocalTime().ToString("MMMM dd, yyyy"):</strong>
                        @acceptance.RevocationReason
                    </MudText>
                </MudAlert>
            }
        </MudStack>
    }
</MudPaper>

@code {
    [Parameter]
    public Guid ReserveStudyId { get; set; }

    [Parameter]
    public EventCallback OnAcceptanceLoaded { get; set; }

    private ProposalAcceptance? acceptance;
    private bool isLoading = true;

    protected override async Task OnParametersSetAsync()
    {
        if (ReserveStudyId != Guid.Empty)
        {
            await LoadAcceptanceAsync();
        }
    }

    private async Task LoadAcceptanceAsync()
    {
        isLoading = true;
        
        try
        {
            acceptance = await AcceptanceService.GetAcceptanceByStudyIdAsync(ReserveStudyId);
            await OnAcceptanceLoaded.InvokeAsync();
        }
        catch
        {
            acceptance = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    public async Task RefreshAsync()
    {
        await LoadAcceptanceAsync();
        StateHasChanged();
    }

    public bool HasValidAcceptance => acceptance?.IsValid == true;
}
