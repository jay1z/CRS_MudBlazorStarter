@using CRS.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    var siteVisitDate = Model.SiteVisitDate ?? DateTime.Now;
    var specialistName = Model.ReserveStudy?.Specialist?.FullName ?? "Our specialist";
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#8b5cf6";
    var secondaryColor = tenant?.SecondaryColor ?? "#7c3aed";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Site Visit Scheduled - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%); @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0;" : "") padding: 40px; text-align: center;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; line-height: 64px;">
                                            <span style="font-size: 32px;">📅</span>
                                        </div>
                                        <h1 style="margin: 0 0 8px 0; color: #ffffff; font-size: 28px; font-weight: 700; letter-spacing: -0.5px;">Site Visit Scheduled</h1>
                                        <p style="margin: 0; color: rgba(255,255,255,0.9); font-size: 16px;">@communityName</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Date/Time Card -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #f5f3ff 0%, #ede9fe 100%); border-radius: 12px; padding: 24px; border: 1px solid #c4b5fd; text-align: center;">
                                <p style="margin: 0 0 8px 0; color: #7c3aed; font-size: 14px; font-weight: 600; text-transform: uppercase; letter-spacing: 1px;">Scheduled Date & Time</p>
                                <p style="margin: 0 0 4px 0; color: #5b21b6; font-size: 24px; font-weight: 700;">@siteVisitDate.ToString("dddd, MMMM dd, yyyy")</p>
                                <p style="margin: 0; color: #7c3aed; font-size: 18px; font-weight: 600;">@siteVisitDate.ToString("h:mm tt")</p>
                            </div>
                        </td>
                    </tr>

                    <!-- Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Hello,
                            </p>
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Your site visit has been scheduled! @specialistName will visit <strong>@communityName</strong> to assess the property's common elements and building components.
                            </p>
                            <p style="margin: 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                During the site visit, our specialist will conduct a thorough inspection of your property's major components, take measurements and photos, and gather the data needed for your reserve study analysis.
                            </p>
                        </td>
                    </tr>

                    <!-- What to Expect Section -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: #f9fafb; border-radius: 12px; padding: 24px; border: 1px solid #e5e7eb;">
                                <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600;">What to Expect</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <span style="color: #8b5cf6;">✓</span>
                                            <span style="color: #374151; font-size: 14px; padding-left: 8px;">Inspection of common areas, roofing, and building exteriors</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <span style="color: #8b5cf6;">✓</span>
                                            <span style="color: #374151; font-size: 14px; padding-left: 8px;">Assessment of mechanical systems and infrastructure</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <span style="color: #8b5cf6;">✓</span>
                                            <span style="color: #374151; font-size: 14px; padding-left: 8px;">Photos and measurements of major components</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 6px 0;">
                                            <span style="color: #8b5cf6;">✓</span>
                                            <span style="color: #374151; font-size: 14px; padding-left: 8px;">Duration: approximately 2-4 hours depending on property size</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- CTA Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb; text-align: center;">
                            <a href="@detailsUrl" style="display: inline-block; background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); color: #ffffff; text-decoration: none; padding: 16px 32px; border-radius: 8px; font-size: 16px; font-weight: 600;">View Study Details</a>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; text-align: center; border: 1px solid #e5e7eb; border-top: none;">
                            @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                <p style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600;">
                                    @companyName
                                </p>
                                <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                    @if (!string.IsNullOrEmpty(companyPhone)) {
                                        <span>📞 @companyPhone</span>
                                    }
                                    @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                        <span> | </span>
                                    }
                                    @if (!string.IsNullOrEmpty(companyEmail)) {
                                        <span>✉️ <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                    }
                                </p>
                            }
                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 14px;">
                                Need to reschedule? Please contact us as soon as possible.
                            </p>
                            <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                © @DateTime.Now.Year @companyName. All rights reserved.
                            </p>
                        </td>
                    </tr>

                </table>
            </td>
        </tr>
    </table>
</body>
</html>
