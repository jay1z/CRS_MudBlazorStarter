@using Horizon.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    var balance = Model.ReserveStudy?.FinancialInfo?.CurrentReserveFundBalance.ToString("C") ?? "N/A";
    var contribution = Model.ReserveStudy?.FinancialInfo?.AnnualContribution.ToString("C") ?? "N/A";
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#10b981";
    var secondaryColor = tenant?.SecondaryColor ?? "#059669";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Financial Information Received - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }

                    <!-- Community Name and Action Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px 24px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb; @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0; border-top: 1px solid #e5e7eb;" : "")">
                            <h2 style="margin: 0 0 16px 0; color: @primaryColor; font-size: 22px; font-weight: 700; text-align: center;">@communityName</h2>
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">View Reserve Study Online ‚Üí</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Thank You Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Thank you for submitting your financial information!
                            </p>
                            <p style="margin: 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Our team will review the submitted information and proceed with your reserve study. You'll receive updates as we make progress.
                            </p>
                        </td>
                    </tr>

                    <!-- Submitted Summary -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-radius: 12px; padding: 24px; border: 1px solid #bbf7d0;">
                                <h2 style="margin: 0 0 16px 0; color: #166534; font-size: 18px; font-weight: 600;">Submitted Information</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Reserve Fund Balance</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 16px; font-weight: 600;">@balance</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Annual Contribution</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 16px; font-weight: 600;">@contribution</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- Next Steps -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #10b981; padding-bottom: 8px;">What's Next</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #10b981; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">1</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Review by our team</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">We'll review your financial data for completeness.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #d1d5db; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">2</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Site visit scheduling</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">We'll contact you to schedule the on-site visit.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #d1d5db; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">3</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Report preparation</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">After the site visit, we'll prepare your reserve study report.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- View Details Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">View Study Progress ‚Üí</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                            <p style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600;">
                                                @companyName
                                            </p>
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                                @if (!string.IsNullOrEmpty(companyPhone)) {
                                                    <span>üìû @companyPhone</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                                    <span> | </span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyEmail)) {
                                                    <span>‚úâÔ∏è <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                                }
                                            </p>
                                        }
                                        <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                            Questions? Reply to this email or contact your specialist.
                                        </p>
                                        <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                            ¬© @DateTime.Now.Year @companyName. All rights reserved.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
