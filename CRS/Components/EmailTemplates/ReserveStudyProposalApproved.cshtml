@using CRS.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    var proposalCost = Model.ReserveStudy?.CurrentProposal?.EstimatedCost.ToString("C") ?? "TBD";
    var approvedBy = Model.ReserveStudy?.CurrentProposal?.ApprovedBy ?? "Management";
    var approvedDate = Model.ReserveStudy?.CurrentProposal?.DateApproved?.ToString("MMMM d, yyyy") ?? DateTime.Now.ToString("MMMM d, yyyy");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Proposal Approved - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, #10b981 0%, #059669 100%); border-radius: 16px 16px 0 0; padding: 40px; text-align: center;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; line-height: 64px;">
                                            <span style="font-size: 32px;">🎉</span>
                                        </div>
                                        <h1 style="margin: 0 0 8px 0; color: #ffffff; font-size: 28px; font-weight: 700; letter-spacing: -0.5px;">Proposal Approved!</h1>
                                        <p style="margin: 0; color: rgba(255,255,255,0.9); font-size: 16px;">@communityName</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Approval Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Great news! The proposal for your reserve study has been approved.
                            </p>
                            <p style="margin: 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                We'll now proceed with collecting financial information and scheduling the site visit for your community.
                            </p>
                        </td>
                    </tr>

                    <!-- Approval Summary -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-radius: 12px; padding: 24px; border: 1px solid #bbf7d0;">
                                <h2 style="margin: 0 0 16px 0; color: #166534; font-size: 18px; font-weight: 600;">Approval Details</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Approved Amount</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 20px; font-weight: 700;">@proposalCost</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Approved By</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 14px; font-weight: 600;">@approvedBy</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Date</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 14px; font-weight: 600;">@approvedDate</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- Next Steps -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #10b981; padding-bottom: 8px;">Next Steps</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #10b981; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">✓</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500; text-decoration: line-through;">Proposal approved</span>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #3b82f6; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">→</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Financial information collection</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">We'll reach out to gather your community's financial data.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #d1d5db; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">3</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Site visit scheduling</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">We'll coordinate a convenient time for the on-site assessment.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- View Details Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">View Study Details →</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                            Questions? Reply to this email or contact your specialist.
                                        </p>
                                        <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                            © @DateTime.Now.Year ALX Reserve Cloud. All rights reserved.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
