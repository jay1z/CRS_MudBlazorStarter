@using CRS.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    var estimatedCost = Model.ReserveStudy?.CurrentProposal?.EstimatedCost ?? 0;
    var proposalCost = estimatedCost > 0 ? estimatedCost.ToString("C") : "See Proposal Details";
    var proposalScope = Model.ReserveStudy?.CurrentProposal?.ProposalScope ?? "Reserve Study";
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#10b981";
    var secondaryColor = tenant?.SecondaryColor ?? "#059669";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Reserve Study Proposal - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }

                    <!-- Community Name and Action Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px 24px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb; @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0; border-top: 1px solid #e5e7eb;" : "")">
                            <h2 style="margin: 0 0 16px 0; color: @primaryColor; font-size: 22px; font-weight: 700; text-align: center;">@communityName</h2>
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">View Proposal Online →</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Welcome Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Hello,
                            </p>
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                We're pleased to inform you that a proposal has been prepared for your reserve study. Please review the details below and click the button to view the full proposal and accept it online.
                            </p>
                        </td>
                    </tr>

                    <!-- Proposal Summary -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-radius: 12px; padding: 24px; border: 1px solid #bbf7d0;">
                                <h2 style="margin: 0 0 16px 0; color: #166534; font-size: 18px; font-weight: 600;">Proposal Summary</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Scope of Work</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 14px; font-weight: 600;">@proposalScope</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Estimated Cost</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 20px; font-weight: 700;">@proposalCost</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- Primary Action Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">Review & Accept Proposal →</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Next Steps -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #10b981; padding-bottom: 8px;">Next Steps</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #10b981; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">1</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Review the proposal details</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">Take your time to review the scope and estimated cost.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #10b981; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">2</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">Accept the proposal online</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">Click the button above to accept and sign digitally.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0;">
                                        <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                            <tr>
                                                <td style="width: 32px; vertical-align: top;">
                                                    <div style="width: 24px; height: 24px; background: #10b981; border-radius: 50%; color: #fff; text-align: center; line-height: 24px; font-size: 12px; font-weight: 600;">3</div>
                                                </td>
                                                <td style="padding-left: 12px;">
                                                    <span style="color: #374151; font-size: 14px; font-weight: 500;">We'll begin the study</span>
                                                    <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 13px;">Once accepted, we'll start collecting information and schedule the site visit.</p>
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Study Information -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 8px;">Study Information</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Community</span>
                                    </td>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb; text-align: right;">
                                        <span style="color: #374151; font-size: 14px; font-weight: 500;">@communityName</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Request ID</span>
                                    </td>
                                    <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb; text-align: right;">
                                        <code style="background: #f3f4f6; padding: 4px 8px; border-radius: 4px; font-size: 13px; color: #374151;">@(Model.ReserveStudy?.Id.ToString().Substring(0, 8))...</code>
                                    </td>
                                </tr>
                                @if (Model.ReserveStudy?.CurrentProposal?.ProposalDate != null) {
                                    <tr>
                                        <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb;">
                                            <span style="color: #6b7280; font-size: 14px;">Proposal Date</span>
                                        </td>
                                        <td style="padding: 12px 0; border-bottom: 1px solid #e5e7eb; text-align: right;">
                                            <span style="color: #374151; font-size: 14px; font-weight: 500;">@Model.ReserveStudy.CurrentProposal.ProposalDate.ToString("MMMM d, yyyy")</span>
                                        </td>
                                    </tr>
                                }
                                @if (Model.ReserveStudy?.Specialist != null) {
                                    <tr>
                                        <td style="padding: 12px 0;">
                                            <span style="color: #6b7280; font-size: 14px;">Your Specialist</span>
                                        </td>
                                        <td style="padding: 12px 0; text-align: right;">
                                            <span style="color: #374151; font-size: 14px; font-weight: 500;">@Model.ReserveStudy.Specialist.FullName</span>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                            <p style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600;">
                                                @companyName
                                            </p>
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                                @if (!string.IsNullOrEmpty(companyPhone)) {
                                                    <span>📞 @companyPhone</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                                    <span> | </span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyEmail)) {
                                                    <span>✉️ <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                                }
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(companyWebsite)) {
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                                🌐 <a href="@companyWebsite" style="color: @primaryColor; text-decoration: none;">@companyWebsite</a>
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(companyAddress)) {
                                            <p style="margin: 0 0 12px 0; color: #9ca3af; font-size: 12px;">
                                                @companyAddress
                                            </p>
                                        }
                                        <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                            Questions? Reply to this email or contact your specialist directly.
                                        </p>
                                        <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                            © @DateTime.Now.Year @companyName. All rights reserved.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
