@using Horizon.Models
@using Horizon.Models.Emails
@model InvoiceEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var invoice = Model.Invoice;
    var communityName = Model.ReserveStudy?.Community?.Name ?? invoice.BillToName ?? "Client";
    var invoiceNumber = invoice.InvoiceNumber;
    var invoiceDate = invoice.InvoiceDate.ToString("MMMM d, yyyy");
    var dueDate = invoice.DueDate.ToString("MMMM d, yyyy");
    var totalAmount = invoice.TotalAmount.ToString("C");
    var balanceDue = invoice.BalanceDue.ToString("C");
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#3b82f6";
    var secondaryColor = tenant?.SecondaryColor ?? "#1d4ed8";
    
    var invoiceViewUrl = Model.InvoiceViewUrl ?? $"{baseUrl}/Invoices/{invoice.Id}";
    var isOverdue = invoice.Status == InvoiceStatus.Overdue || Model.IsReminder;
    var headerIcon = isOverdue ? "‚ö†Ô∏è" : "üìÑ";
    var headerText = isOverdue ? "Payment Reminder" : "Invoice";
    var headerColor = isOverdue ? "#dc2626" : primaryColor;
    var headerSecondary = isOverdue ? "#b91c1c" : secondaryColor;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@headerText #@invoiceNumber - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, @headerColor 0%, @headerSecondary 100%); @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0;" : "") padding: 40px; text-align: center;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; line-height: 64px;">
                                            <span style="font-size: 32px;">@headerIcon</span>
                                        </div>
                                        <h1 style="margin: 0 0 8px 0; color: #ffffff; font-size: 28px; font-weight: 700; letter-spacing: -0.5px;">@headerText</h1>
                                        <p style="margin: 0; color: rgba(255,255,255,0.9); font-size: 18px; font-weight: 600;">#@invoiceNumber</p>
                                        <p style="margin: 8px 0 0 0; color: rgba(255,255,255,0.9); font-size: 16px;">@communityName</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Invoice Summary -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            @if (Model.IsReminder) {
                                <div style="background-color: #fef2f2; border: 1px solid #fecaca; border-radius: 8px; padding: 16px; margin-bottom: 24px;">
                                    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                        <tr>
                                            <td>
                                                <span style="font-size: 20px; vertical-align: middle;">‚ö†Ô∏è</span>
                                                <span style="color: #dc2626; font-weight: 600; margin-left: 8px;">This invoice is @Model.DaysPastDue days past due</span>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            }

                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin-bottom: 24px;">
                                <tr>
                                    <td style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Invoice Date</span>
                                    </td>
                                    <td align="right" style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #111827; font-weight: 500;">@invoiceDate</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Due Date</span>
                                    </td>
                                    <td align="right" style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: @(isOverdue ? "#dc2626" : "#111827"); font-weight: @(isOverdue ? "700" : "500");">@dueDate</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #6b7280; font-size: 14px;">Bill To</span>
                                    </td>
                                    <td align="right" style="padding: 8px 0; border-bottom: 1px solid #e5e7eb;">
                                        <span style="color: #111827; font-weight: 500;">@invoice.BillToName</span>
                                    </td>
                                </tr>
                            </table>

                            <!-- Line Items -->
                            <h3 style="margin: 0 0 16px 0; color: #111827; font-size: 16px; font-weight: 600;">Invoice Details</h3>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f9fafb; border-radius: 8px; margin-bottom: 24px;">
                                <tr style="background-color: #e5e7eb;">
                                    <td style="padding: 12px 16px; font-weight: 600; color: #374151; font-size: 12px; text-transform: uppercase; border-radius: 8px 0 0 0;">Description</td>
                                    <td align="right" style="padding: 12px 16px; font-weight: 600; color: #374151; font-size: 12px; text-transform: uppercase; border-radius: 0 8px 0 0;">Amount</td>
                                </tr>
                                @foreach (var item in invoice.LineItems.OrderBy(li => li.SortOrder)) {
                                    <tr>
                                        <td style="padding: 12px 16px; color: #111827; border-bottom: 1px solid #e5e7eb;">@item.Description</td>
                                        <td align="right" style="padding: 12px 16px; color: #111827; border-bottom: 1px solid #e5e7eb; font-weight: 500;">@item.LineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </table>

                            <!-- Totals -->
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="margin-bottom: 24px;">
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #6b7280; font-size: 14px;">Subtotal</span>
                                    </td>
                                    <td align="right" style="padding: 8px 0;">
                                        <span style="color: #111827; font-weight: 500;">@invoice.Subtotal.ToString("C")</span>
                                    </td>
                                </tr>
                                @if (invoice.DiscountAmount > 0) {
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #059669; font-size: 14px;">@(invoice.DiscountDescription ?? "Discount")</span>
                                        </td>
                                        <td align="right" style="padding: 8px 0;">
                                            <span style="color: #059669; font-weight: 500;">-@invoice.DiscountAmount.ToString("C")</span>
                                        </td>
                                    </tr>
                                }
                                @if (invoice.TaxAmount > 0) {
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #6b7280; font-size: 14px;">Tax (@invoice.TaxRate%)</span>
                                        </td>
                                        <td align="right" style="padding: 8px 0;">
                                            <span style="color: #111827; font-weight: 500;">@invoice.TaxAmount.ToString("C")</span>
                                        </td>
                                    </tr>
                                }
                                @if (invoice.AmountPaid > 0) {
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #059669; font-size: 14px;">Amount Paid</span>
                                        </td>
                                        <td align="right" style="padding: 8px 0;">
                                            <span style="color: #059669; font-weight: 500;">-@invoice.AmountPaid.ToString("C")</span>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td style="padding: 16px 0 8px 0; border-top: 2px solid #e5e7eb;">
                                        <span style="color: #111827; font-size: 18px; font-weight: 700;">Balance Due</span>
                                    </td>
                                    <td align="right" style="padding: 16px 0 8px 0; border-top: 2px solid #e5e7eb;">
                                        <span style="color: @(isOverdue ? "#dc2626" : primaryColor); font-size: 24px; font-weight: 700;">@balanceDue</span>
                                    </td>
                                </tr>
                            </table>

                            @if (!string.IsNullOrEmpty(Model.AdditionalMessage)) {
                                <div style="background-color: #f3f4f6; border-radius: 8px; padding: 16px; margin-bottom: 24px;">
                                    <p style="margin: 0; color: #374151; font-size: 14px; line-height: 1.6;">@Model.AdditionalMessage</p>
                                </div>
                            }

                            <!-- CTA Button -->
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center" style="padding-top: 16px;">
                                        <a href="@invoiceViewUrl" style="display: inline-block; background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%); color: #ffffff; text-decoration: none; padding: 16px 40px; border-radius: 8px; font-weight: 600; font-size: 16px;">View Invoice</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Payment Terms -->
                    @if (!string.IsNullOrEmpty(invoice.Terms)) {
                        <tr>
                            <td style="background-color: #f9fafb; padding: 24px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                                <h3 style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600; text-transform: uppercase;">Payment Terms</h3>
                                <p style="margin: 0; color: #6b7280; font-size: 14px; line-height: 1.6;">@invoice.Terms</p>
                            </td>
                        </tr>
                    }

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #1f2937; padding: 32px 40px; border-radius: 0 0 16px 16px; text-align: center;">
                            <p style="margin: 0 0 16px 0; color: rgba(255,255,255,0.9); font-weight: 600; font-size: 16px;">@companyName</p>
                            @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                <p style="margin: 0 0 8px 0; color: rgba(255,255,255,0.7); font-size: 14px;">
                                    @if (!string.IsNullOrEmpty(companyPhone)) { <span>@companyPhone</span> }
                                    @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) { <span> | </span> }
                                    @if (!string.IsNullOrEmpty(companyEmail)) { <span>@companyEmail</span> }
                                </p>
                            }
                            @if (!string.IsNullOrEmpty(companyAddress)) {
                                <p style="margin: 0 0 8px 0; color: rgba(255,255,255,0.7); font-size: 14px;">@companyAddress</p>
                            }
                            @if (!string.IsNullOrEmpty(companyWebsite)) {
                                <p style="margin: 16px 0 0 0;">
                                    <a href="@companyWebsite" style="color: @primaryColor; text-decoration: none; font-size: 14px;">@companyWebsite</a>
                                </p>
                            }
                            <p style="margin: 24px 0 0 0; color: rgba(255,255,255,0.5); font-size: 12px;">
                                Invoice #@invoiceNumber ‚Ä¢ @invoiceDate
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
