@using CRS.Models.Emails
@model ReserveStudyEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var detailsUrl = $"{baseUrl}/ReserveStudies/{Model.ReserveStudy?.Id}/Details";
    var communityName = Model.ReserveStudy?.Community?.Name ?? "Your Community";
    var completedDate = Model.ReserveStudy?.DateModified?.ToString("MMMM d, yyyy") ?? DateTime.Now.ToString("MMMM d, yyyy");
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#10b981";
    var secondaryColor = tenant?.SecondaryColor ?? "#059669";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Reserve Study Completed - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%); @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0;" : "") padding: 40px; text-align: center;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; line-height: 64px;">
                                            <span style="font-size: 32px;">🎊</span>
                                        </div>
                                        <h1 style="margin: 0 0 8px 0; color: #ffffff; font-size: 28px; font-weight: 700; letter-spacing: -0.5px;">Reserve Study Complete!</h1>
                                        <p style="margin: 0; color: rgba(255,255,255,0.9); font-size: 16px;">@communityName</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Congratulations Message -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <p style="margin: 0 0 16px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Congratulations! Your reserve study has been completed.
                            </p>
                            <p style="margin: 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Your comprehensive reserve study report is now available. This report provides a detailed analysis of your community's common elements and a recommended funding plan for future maintenance and replacements.
                            </p>
                        </td>
                    </tr>

                    <!-- Completion Summary -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%); border-radius: 12px; padding: 24px; border: 1px solid #bbf7d0;">
                                <h2 style="margin: 0 0 16px 0; color: #166534; font-size: 18px; font-weight: 600;">Study Summary</h2>
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Community</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 14px; font-weight: 600;">@communityName</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Completed Date</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="color: #166534; font-size: 14px; font-weight: 600;">@completedDate</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 8px 0;">
                                            <span style="color: #166534; font-size: 14px;">Status</span>
                                        </td>
                                        <td style="padding: 8px 0; text-align: right;">
                                            <span style="display: inline-block; background: #10b981; color: white; padding: 4px 12px; border-radius: 12px; font-size: 12px; font-weight: 600;">COMPLETE</span>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- What's Included -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <h2 style="margin: 0 0 16px 0; color: #374151; font-size: 18px; font-weight: 600; border-bottom: 2px solid #667eea; padding-bottom: 8px;">Your Report Includes</h2>
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">Component inventory and condition assessment</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">Remaining useful life estimates</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">Replacement cost projections</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">30-year funding plan</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">Recommended annual contribution</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td style="padding: 8px 0;">
                                        <span style="color: #10b981; margin-right: 8px;">✓</span>
                                        <span style="color: #374151; font-size: 14px;">Site visit photos and documentation</span>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- View Report Button -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center">
                                <tr>
                                    <td style="border-radius: 8px; background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
                                        <a href="@detailsUrl" target="_blank" style="display: inline-block; padding: 16px 32px; font-size: 16px; font-weight: 600; color: #ffffff; text-decoration: none; border-radius: 8px;">View Your Report →</a>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Renewal Reminder -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 0 40px 32px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            <div style="background: #fef3c7; border-radius: 8px; padding: 16px; border: 1px solid #fcd34d;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="width: 32px; vertical-align: top;">
                                            <span style="font-size: 20px;">📅</span>
                                        </td>
                                        <td style="padding-left: 12px;">
                                            <span style="color: #92400e; font-size: 14px; font-weight: 600;">Renewal Reminder</span>
                                            <p style="margin: 4px 0 0 0; color: #a16207; font-size: 13px;">Most states require reserve studies to be updated every 3-5 years. We'll remind you when it's time for an update!</p>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; border-radius: 0 0 16px 16px; padding: 24px 40px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                            <p style="margin: 0 0 8px 0; color: #374151; font-size: 14px; font-weight: 600;">
                                                @companyName
                                            </p>
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                                @if (!string.IsNullOrEmpty(companyPhone)) {
                                                    <span>📞 @companyPhone</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                                    <span> | </span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyEmail)) {
                                                    <span>✉️ <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                                }
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(companyAddress)) {
                                            <p style="margin: 0 0 12px 0; color: #9ca3af; font-size: 12px;">
                                                @companyAddress
                                            </p>
                                        }
                                        <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 13px;">
                                            Thank you for choosing @companyName!
                                        </p>
                                        <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                            © @DateTime.Now.Year @companyName. All rights reserved.
                                        </p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
