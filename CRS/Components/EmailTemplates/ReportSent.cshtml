@using CRS.Models
@using CRS.Models.Emails
@model ReportEmail

@{
    var baseUrl = string.IsNullOrEmpty(Model.BaseUrl) ? "" : Model.BaseUrl;
    var report = Model.Report;
    var communityName = Model.CommunityName ?? Model.ReserveStudy?.Community?.Name ?? "Client";
    var reportTypeName = Model.ReportTypeName;
    var version = Model.Version;
    
    // Tenant branding
    var tenant = Model.TenantInfo;
    var companyName = tenant?.CompanyName ?? "ALX Reserve Cloud";
    var companyPhone = tenant?.Phone;
    var companyEmail = tenant?.FromEmail;
    var companyWebsite = tenant?.Website;
    var companyAddress = tenant?.Address;
    var companyTagline = tenant?.Tagline;
    var logoUrl = tenant?.LogoUrl;
    var primaryColor = tenant?.PrimaryColor ?? "#667eea";
    var secondaryColor = tenant?.SecondaryColor ?? "#764ba2";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Your @reportTypeName is Ready - @communityName</title>
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background-color: #f3f4f6; -webkit-font-smoothing: antialiased;">
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0" style="background-color: #f3f4f6;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" width="600" cellspacing="0" cellpadding="0" border="0" style="max-width: 600px; width: 100%;">
                    
                    <!-- Company Logo/Name Banner -->
                    @if (!string.IsNullOrEmpty(logoUrl) || !string.IsNullOrEmpty(companyName)) {
                        <tr>
                            <td style="background-color: #ffffff; padding: 20px 40px; border-radius: 16px 16px 0 0; border: 1px solid #e5e7eb; border-bottom: none;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td align="center">
                                            @if (!string.IsNullOrEmpty(logoUrl)) {
                                                <img src="@logoUrl" alt="@companyName" style="max-height: 60px; max-width: 200px; margin-bottom: 8px;" />
                                            } else {
                                                <h2 style="margin: 0; color: @primaryColor; font-size: 24px; font-weight: 700;">@companyName</h2>
                                            }
                                            @if (!string.IsNullOrEmpty(companyTagline)) {
                                                <p style="margin: 4px 0 0 0; color: #6b7280; font-size: 14px;">@companyTagline</p>
                                            }
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    }
                    
                    <!-- Header with Gradient -->
                    <tr>
                        <td style="background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%); @(string.IsNullOrEmpty(logoUrl) && string.IsNullOrEmpty(companyName) ? "border-radius: 16px 16px 0 0;" : "") padding: 40px; text-align: center;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        <div style="width: 64px; height: 64px; background: rgba(255,255,255,0.2); border-radius: 50%; margin: 0 auto 16px; line-height: 64px;">
                                            <span style="font-size: 32px;">📊</span>
                                        </div>
                                        <h1 style="margin: 0 0 8px 0; color: #ffffff; font-size: 28px; font-weight: 700; letter-spacing: -0.5px;">Your Report is Ready</h1>
                                        <p style="margin: 0; color: rgba(255,255,255,0.9); font-size: 18px; font-weight: 600;">@reportTypeName</p>
                                        <p style="margin: 8px 0 0 0; color: rgba(255,255,255,0.9); font-size: 16px;">@communityName</p>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>

                    <!-- Main Content -->
                    <tr>
                        <td style="background-color: #ffffff; padding: 32px 40px; border-left: 1px solid #e5e7eb; border-right: 1px solid #e5e7eb;">
                            
                            <!-- Greeting -->
                            <p style="margin: 0 0 24px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Dear @communityName,
                            </p>
                            
                            <p style="margin: 0 0 24px 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                We are pleased to inform you that your <strong>@reportTypeName</strong> (Version @version) is now ready for your review.
                            </p>
                            
                            @if (!string.IsNullOrWhiteSpace(Model.PersonalMessage)) {
                                <div style="background-color: #f9fafb; border-left: 4px solid @primaryColor; padding: 16px 20px; margin-bottom: 24px; border-radius: 0 8px 8px 0;">
                                    <p style="margin: 0; color: #374151; font-size: 15px; line-height: 1.6; white-space: pre-wrap;">@Model.PersonalMessage</p>
                                </div>
                            }
                            
                            <!-- Report Details Card -->
                            <div style="background-color: #f8fafc; border-radius: 12px; padding: 24px; margin-bottom: 24px;">
                                <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                    <tr>
                                        <td style="padding-bottom: 12px;">
                                            <span style="color: #6b7280; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Report Type</span>
                                            <p style="margin: 4px 0 0 0; color: #111827; font-size: 16px; font-weight: 600;">@reportTypeName</p>
                                        </td>
                                        <td style="padding-bottom: 12px; text-align: right;">
                                            <span style="color: #6b7280; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Version</span>
                                            <p style="margin: 4px 0 0 0; color: #111827; font-size: 16px; font-weight: 600;">@version</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td colspan="2">
                                            <div style="border-top: 1px solid #e5e7eb; padding-top: 12px;">
                                                <span style="color: #6b7280; font-size: 13px; text-transform: uppercase; letter-spacing: 0.5px;">Generated On</span>
                                                <p style="margin: 4px 0 0 0; color: #111827; font-size: 16px; font-weight: 600;">@report.GeneratedAt.ToString("MMMM d, yyyy")</p>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            
                            @if (Model.IncludeDownloadLink && !string.IsNullOrEmpty(Model.DownloadUrl)) {
                                <!-- Download Button -->
                                <div style="text-align: center; margin: 32px 0;">
                                    <a href="@Model.DownloadUrl" 
                                       style="display: inline-block; background: linear-gradient(135deg, @primaryColor 0%, @secondaryColor 100%); color: #ffffff; text-decoration: none; padding: 16px 48px; border-radius: 8px; font-size: 16px; font-weight: 600; box-shadow: 0 4px 14px 0 rgba(102, 126, 234, 0.4);">
                                        📥 Download Your Report
                                    </a>
                                </div>
                                
                                <p style="margin: 0 0 24px 0; color: #6b7280; font-size: 14px; text-align: center;">
                                    <em>This download link will expire in 7 days for security purposes.</em>
                                </p>
                            }
                            
                            <!-- Closing -->
                            <p style="margin: 24px 0 0 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                If you have any questions about this report or would like to discuss the findings, please don't hesitate to contact us.
                            </p>
                            
                            <p style="margin: 24px 0 0 0; color: #374151; font-size: 16px; line-height: 1.6;">
                                Best regards,<br />
                                <strong>@companyName</strong>
                            </p>
                        </td>
                    </tr>

                    <!-- Footer -->
                    <tr>
                        <td style="background-color: #f9fafb; padding: 24px 40px; border-radius: 0 0 16px 16px; border: 1px solid #e5e7eb; border-top: none;">
                            <table role="presentation" width="100%" cellspacing="0" cellpadding="0" border="0">
                                <tr>
                                    <td align="center">
                                        @if (!string.IsNullOrEmpty(companyPhone) || !string.IsNullOrEmpty(companyEmail)) {
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 14px;">
                                                @if (!string.IsNullOrEmpty(companyPhone)) {
                                                    <span>📞 @companyPhone</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyPhone) && !string.IsNullOrEmpty(companyEmail)) {
                                                    <span style="margin: 0 12px;">•</span>
                                                }
                                                @if (!string.IsNullOrEmpty(companyEmail)) {
                                                    <span>✉️ <a href="mailto:@companyEmail" style="color: @primaryColor; text-decoration: none;">@companyEmail</a></span>
                                                }
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(companyWebsite)) {
                                            <p style="margin: 0 0 8px 0; color: #6b7280; font-size: 14px;">
                                                🌐 <a href="@companyWebsite" style="color: @primaryColor; text-decoration: none;">@companyWebsite</a>
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(companyAddress)) {
                                            <p style="margin: 0; color: #9ca3af; font-size: 12px;">
                                                @companyAddress
                                            </p>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    
                    <!-- Disclaimer -->
                    <tr>
                        <td style="padding: 24px 0; text-align: center;">
                            <p style="margin: 0; color: #9ca3af; font-size: 12px; line-height: 1.5;">
                                This email and any attachments are confidential and intended solely for the addressee.<br />
                                If you received this in error, please delete it and notify us immediately.
                            </p>
                        </td>
                    </tr>
                    
                </table>
            </td>
        </tr>
    </table>
</body>
</html>
