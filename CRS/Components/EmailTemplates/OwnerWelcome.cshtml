@model CRS.Models.Emails.OwnerWelcomeEmail
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Welcome to @Model.TenantName</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f7f7f7;
            margin: 0;
            padding: 0;
        }

        .wrapper {
            max-width: 640px;
            margin: 0 auto;
            background: #ffffff;
            border-radius: 8px;
            overflow: hidden;
        }

        .header {
            background: linear-gradient(135deg,#6A3D9A,#FF8C00);
            padding: 24px;
            color: #fff;
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        .content {
            padding: 24px;
            color: #333;
            line-height: 1.5;
        }

        .btn {
            display: inline-block;
            background: #FF8C00;
            color: #fff !important;
            text-decoration: none;
            padding: 14px 22px;
            border-radius: 6px;
            font-weight: bold;
        }

        .footer {
            font-size: 12px;
            color: #888;
            padding: 24px;
            text-align: center;
        }

        a {
            color: #FF8C00;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="header">
            <h1>Welcome to @Model.TenantName</h1>
        </div>
        <div class="content">
            <p>Thanks for starting your subscription on <strong>ALX Reserve Cloud</strong>.</p>
            <p>Your account has been created successfully! Here are your login credentials:</p>
            
            @if (!string.IsNullOrWhiteSpace(Model.TemporaryPassword)) {
                <div style="background: #f9f9f9; border-left: 4px solid #FF8C00; padding: 16px; margin: 24px 0;">
                    <p style="margin: 0 0 8px 0;"><strong>Email:</strong> <code style="background: #fff; padding: 4px 8px; border-radius: 4px;">@Model.TenantName</code></p>
                    <p style="margin: 0;"><strong>Temporary Password:</strong> <code style="background: #fff; padding: 4px 8px; border-radius: 4px; font-size: 16px; letter-spacing: 1px;">@Model.TemporaryPassword</code></p>
                </div>
                <p><strong>⚠️ Important:</strong> Please change this password after your first login for security.</p>
            }
            
            <p style="text-align:center; margin:32px 0;">
                <a href="@Model.PasswordResetLink" class="btn">Login Now</a>
            </p>
            
            @if (!string.IsNullOrWhiteSpace(Model.SubdomainUrl)) {
                <p>Your Login URL: <a href="@Model.SubdomainUrl">@Model.SubdomainUrl</a></p>
            }
            
            <p>If you did not initiate this subscription please contact support immediately.</p>
            @if (!string.IsNullOrWhiteSpace(Model.SupportEmail)) {
                <p>Support: <a href="mailto:@Model.SupportEmail">@Model.SupportEmail</a></p>
            }
        </div>
        <div class="footer">
            <p>&copy; @DateTime.UtcNow.Year ALX Reserve Cloud. All rights reserved.</p>
        </div>
    </div>
</body>
</html>