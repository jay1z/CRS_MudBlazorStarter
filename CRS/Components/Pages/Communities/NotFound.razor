@page "/Communities/NotFound"
@attribute [Authorize]

@using MudBlazor
@inject NavigationManager NavigationManager

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-6">
    <MudPaper Elevation="5" Class="pa-6 text-center">
        <MudText Typo="Typo.h4" GutterBottom="true">Community Not Found</MudText>
        <MudText Typo="Typo.body1" Class="mb-4">
            The Community you are looking for does not exist or has been removed.
        </MudText>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="@GoBack">
            Back to Communities
        </MudButton>
    </MudPaper>
</MudContainer>

@code {
    private void GoBack() {
        NavigationManager.NavigateTo("/Communities");
    }
}
