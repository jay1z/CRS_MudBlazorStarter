<PageTitle>Reserve Study - Community Reserve Specialists</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">
    <!-- Hero Section -->
    <MudContainer MaxWidth="MaxWidth.Medium">
        <MudContainer MaxWidth="MaxWidth.ExtraSmall">
            <MudCard Elevation="0">
                <MudImage Src="//img1.wsimg.com/isteam/ip/addbf9ae-3a68-4e01-9950-b735952c55b8/giftcard%20logo.jpg" Alt="Community Reserve Specialists" Height="120" Width="312" />
            </MudCard>
        </MudContainer>
        <MudText Typo="Typo.h5" Align="Align.Center">
            A LOCAL RESERVE STUDY PROVIDER
        </MudText>
        <MudPaper Height="650px" Width="100%" Square="true" Elevation="0">
            <MudCard Elevation="25">
                <MudCardMedia Image="//img1.wsimg.com/isteam/stock/1258/:/cr=t:0%25,l:0%25,w:100%25,h:100%25/rs=h:500,cg:true" Height="500" />
                <MudCardContent>
                    <MudText Typo="Typo.h5" Align="Align.Center">
                        Preparing for tomorrow, today!
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center">
                        Find out more about what benefits a Reserve Study can bring to your Community.
                    </MudText>
                    <MudText Typo="Typo.body1" Align="Align.Center">
                        (see below)
                    </MudText>
                </MudCardContent>
            </MudCard>
        </MudPaper>
    </MudContainer>

    <!-- About Section -->
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Elevation="0" Class="py-16">
            <MudText Typo="Typo.h5">ABOUT US</MudText>
            <MudDivider />
            <MudCard Elevation="0">
                <MudCardContent>
                    <MudText Typo="Typo.h4" Align="Align.Center" Class="my-5">Community Reserve Planning</MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center">
                        Helping hundreds of local Communities prepare for future capital replacement expenses using our Reserve Study as a guide.
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center" Class="my-5">Facts:</MudText>
                    <MudCard Elevation="0">
                        <MudCardContent>
                            <MudList T="string">
                                @foreach (BulletPoint bulletPoint in bulletPoints) {
                                    <MudListItem Icon="@MaterialSymbols.Outlined.ChipExtraction" Text="@bulletPoint.Text" />
                                }
                            </MudList>
                        </MudCardContent>
                    </MudCard>
                </MudCardContent>
            </MudCard>

            <MudStack Row="true">
                <MudCard Elevation="0">
                    <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-5">Comprehensive Approach</MudText>
                    <MudText Align="Align.Center">
                        Community Reserve Specialists uses real time local costs from years of relationships with local contractors and vendors currently serving Communities throughout Ohio. Local and real time data helps ensure the most accurate financial projections vs the National "templates" used by many other, non-local Reserve Study providers. Having real-time local data ensures the highest level of accuracy.
                    </MudText>
                </MudCard>
                <MudCard Elevation="0">
                    <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-5">Committed To Service</MudText>
                    <MudText Align="Align.Center">
                        All aspects of the Community may be considered in order to educate the Board of Directors and Association Managers of any potential options for incorporating the plan into the Community. Our mission is to simply meet and exceed our client’s expectations. Call us today to find out how we can help plan long and short term strategies that will help your Community prepare for the future needs.
                    </MudText>
                </MudCard>
            </MudStack>
        </MudPaper>
    </MudContainer>

    <!-- Team Section -->
    <MudContainer MaxWidth="MaxWidth.Large">
        <MudPaper Elevation="0">
            <MudText Typo="Typo.h5" Class="mb-8">Meet The CRS Staff</MudText>
            <MudDivider />
            <MudCarousel TData="TeamMember" Class="mud-width-full" ItemsSource="@teamMembers" Style="height:600px;" ShowArrows="true" ShowBullets="true" EnableSwipeGesture="true" AutoCycle="true">
                <ItemTemplate>
                    <div class="d-flex flex-column flex-column justify-center" style="height:100%">
                        <MudImage Src="@context.Image" Elevation="0" Height="200" ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.Contain" Class="rounded-lg"></MudImage>
                        <MudText Typo="Typo.h4" Align="@Align.Center" Class="my-8">@context.Name</MudText>
                        <MudText Typo="Typo.body1" Align="@Align.Center" Class="mx-20">@context.Description</MudText>
                    </div>
                </ItemTemplate>
            </MudCarousel>
            <MudText Typo="Typo.h6" Class="mb-8">Feel free to call with any questions or click the button below to request a free quote for your Community Reserve Study.</MudText>
        </MudPaper>
        <MudPaper Elevation="0">
            <MudStack>
                <MudText Typo="Typo.h5" Class="bold-text">Phone: 234.900.5501</MudText>
                <MudText Typo="Typo.h6">3841 N. Santom Rd.</MudText>
                <MudText Typo="Typo.h6">Stow, OH 44224</MudText>
                <MudLink Href="mailto:jripple@neocrs.com">jripple@neocrs.com</MudLink>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Email" Size="Size.Large" Style="width: 200px; height: 60px;">FIND OUT MORE</MudButton>
            </MudStack>
        </MudPaper>
    </MudContainer>

    <!-- Logo Section -->
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="my-10">
        <MudGrid Justify="Justify.Center">
            @foreach (var logo in logos) {
                <MudItem xs="3">
                    <MudCard Elevation="0">
                        <MudImage Src="@logo.Src" Alt="@logo.Alt" Height="100" ObjectFit="ObjectFit.Contain" ObjectPosition="ObjectPosition.Center" />
                    </MudCard>
                </MudItem>
            }
        </MudGrid>
        <MudBreakpointProvider>
            @foreach (var logo in logos) {
                <MudHidden Breakpoint="Breakpoint.Xl" Invert="true">
                    <MudImage Src="@logo.Src" Alt="@logo.Alt" Height="100" />
                </MudHidden>
                <MudItem xs="3">
                </MudItem>
            }
        </MudBreakpointProvider>
    </MudContainer>

    <!-- Footer -->
    <MudDivider />
    <MudText Align="Align.Center" Class="my-10">
        Copyright © @DateTime.Today.Year Community Reserve Specialists - All Rights Reserved.
    </MudText>
</MudContainer>

