    private ReserveStudy.WorkflowStatus GetCurrentLegacyStatus() {
        var currentEngine = reserveStudy?.StudyRequest?.CurrentStatus;
        return currentEngine.HasValue ? StatusMapper.ToLegacy(currentEngine.Value) : reserveStudy?.Status ?? ReserveStudy.WorkflowStatus.RequestCreated;
    }

    private ReserveStudy.WorkflowStatus? GetNextStatus() {
        var currentLegacy = GetCurrentLegacyStatus();
        var currentRank = RankByStatus.TryGetValue(currentLegacy, out var rnk) ? rnk : -1;
        var next = DisplayLegacyOrder.FirstOrDefault(s => (RankByStatus.TryGetValue(s, out var rr) ? rr : int.MaxValue) > currentRank);
        return EqualityComparer<ReserveStudy.WorkflowStatus>.Default.Equals(next, default) ? null : next;
    }

    private int GetProgressPercentage() {
        var currentLegacy = GetCurrentLegacyStatus();
        var currentRank = RankByStatus.TryGetValue(currentLegacy, out var rnk) ? rnk : 0;
        var totalSteps = DisplayLegacyOrder.Length;
        return (int)Math.Round((double)(currentRank + 1) / totalSteps * 100);
    }

    private List<MilestoneInfo> GetKeyMilestones() {
        var milestones = new List<MilestoneInfo>();
        var currentLegacy = GetCurrentLegacyStatus();
        var currentRank = RankByStatus.TryGetValue(currentLegacy, out var cr) ? cr : -1;

        // Define key milestones to show (not all steps)
        var keyStatuses = new[] {
            ReserveStudy.WorkflowStatus.RequestCreated,
            ReserveStudy.WorkflowStatus.ProposalSent,
            ReserveStudy.WorkflowStatus.ProposalAccepted,
            ReserveStudy.WorkflowStatus.FinancialInfoSubmitted,
            ReserveStudy.WorkflowStatus.SiteVisitCompleted,
            ReserveStudy.WorkflowStatus.ReportComplete,
            ReserveStudy.WorkflowStatus.RequestCompleted
        };

        foreach (var status in keyStatuses) {
            var itemRank = RankByStatus.TryGetValue(status, out var ir) ? ir : int.MaxValue;
            var isCompleted = currentRank > itemRank;
            var isCurrent = currentRank == itemRank;
            
            // Get date from timeline items or fallback
            var timelineItem = timelineItems.FirstOrDefault(t => t.Status == status);
            
            milestones.Add(new MilestoneInfo {
                Status = status,
                Title = FormatStatusTitle(status),
                Date = timelineItem?.DateValue ?? GetFallbackDate(status),
                IsCompleted = isCompleted,
                IsCurrent = isCurrent
            });
        }

        return milestones;
    }

