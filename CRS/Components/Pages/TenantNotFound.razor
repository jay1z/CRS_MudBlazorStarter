@page "/tenant/not-found"
@attribute [AllowAnonymous]
@attribute [CRS.Components.Layout.HideNav]
@layout CRS.Components.Layout.HomeLayout
@using Microsoft.AspNetCore.Components
@inject NavigationManager Nav

<PageTitle>Tenant Not Found - ALX Reserve Cloud</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex flex-column justify-center align-center" Style="min-height: 100vh;">
    <MudPaper Class="pa-8 d-flex flex-column align-center" Elevation="3" Style="border-radius: 20px; text-align: center;">
        
        @* Error Icon *@
        <MudIcon Icon="@Icons.Material.Filled.SearchOff" Style="color: #FF8C00; font-size: 120px;" Class="mb-4" />
        
        @* Heading *@
        <MudText Typo="Typo.h2" Class="fw-bold mb-4" Style="color: #FF8C00;">
            Tenant Not Found
        </MudText>
        
        @* Subheading *@
        <MudText Typo="Typo.h5" Class="mb-4" Style="color: #666;">
            We couldn't locate that organization
        </MudText>
        
        @* Requested Host Display *@
        @if (!string.IsNullOrWhiteSpace(Host))
        {
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mb-4" Style="max-width: 500px;">
                <MudText Typo="Typo.body2">
                    Requested host: <strong>@Host</strong>
                </MudText>
            </MudAlert>
        }
        else
        {
            <MudText Typo="Typo.body1" Class="mb-4" Style="color: #666; max-width: 500px;">
                The subdomain you requested does not match any active tenant.
            </MudText>
        }
        
        @* Suggestions *@
        <MudPaper Class="pa-4 mb-6" Elevation="0" Style="background-color: #f5f5f5; border-radius: 12px; max-width: 500px;">
            <MudText Typo="Typo.h6" Class="mb-3" Style="color: #333;">What you can do:</MudText>
            <MudList T="string" Dense="true">
                <MudListItem T="string" Icon="@Icons.Material.Filled.Spellcheck" IconColor="Color.Primary">
                    <MudText Typo="Typo.body2">Check the spelling of the subdomain</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.HourglassTop" IconColor="Color.Warning">
                    <MudText Typo="Typo.body2">If you're a new customer, your site may not be activated yet</MudText>
                </MudListItem>
                <MudListItem T="string" Icon="@Icons.Material.Filled.ContactSupport" IconColor="Color.Info">
                    <MudText Typo="Typo.body2">Contact support if you believe this is an error</MudText>
                </MudListItem>
            </MudList>
        </MudPaper>
        
        @* Action Buttons *@
        <MudStack Row="true" Spacing="3" Class="mb-4">
            <MudButton Variant="Variant.Filled" 
                       Color="Color.Warning" 
                       StartIcon="@Icons.Material.Filled.Home" 
                       Href="/"
                       Size="Size.Large">
                Go to Home
            </MudButton>
            <MudButton Variant="Variant.Outlined" 
                       Color="Color.Primary" 
                       StartIcon="@Icons.Material.Filled.Business" 
                       Href="/tenant/signup"
                       Size="Size.Large">
                Sign Up
            </MudButton>
        </MudStack>
        
        @* Divider *@
        <MudDivider Class="my-4" Style="width: 100%; max-width: 400px;" />
        
        @* Support Contact *@
        <MudText Typo="Typo.body2" Style="color: #999;" Class="mb-2">
            Need assistance?
        </MudText>
        <MudText Typo="Typo.body2" Style="color: #999;">
            Email us at <MudLink Href="mailto:support@alxreservecloud.com" Style="color: #FF8C00; font-weight: 600;">support@alxreservecloud.com</MudLink>
        </MudText>        
    </MudPaper>
</MudContainer>

@code {
    [Parameter, SupplyParameterFromQuery(Name = "host")] public string? Host { get; set; }
}
